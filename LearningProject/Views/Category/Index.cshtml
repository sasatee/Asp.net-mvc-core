@model List<Category>
  <div class="container">
      <div class="row  pt-4 pb-3">
         

          <div class="col-6">
              <h2>Category List</h2>
              </div>
          <div class="col-6 text-end">
              <a asp-controller="Category" asp-action="Create" class="btn btn-secondary">
                  <i class="bi bi-file-plus-fill"></i>  Create New Category
              </a>
            
          </div>

      </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>

                <th>Category Name</th>
                <th>Display order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td>
                       <div class="row">
                           <div class="col-4">
                       
                       
                          </div>
                          <div class="col-8"> 
                                <div class="w-75 btn-group" role="group">
                                   
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.CategoryId" class="mx-2  btn btn-dark">
                                        <i class="bi bi-pencil-square"></i>Edit
                                    </a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.CategoryId" class="mx-2  btn btn-primary">
                                        <i class="bi bi-trash-fill"></i>Delete
                                    </a>

                                </div>
                          </div>

                      </div>
                    </td>

                </tr>
            }
        </tbody>



    </table>



</div>