@model Category


<form method="post">
    <input asp-for="CategoryId"hidden />
    <div class="border p-3 mt-3">


        <div class="row pb-2">

            <h2>Edit Category</h2>
            <hr />
            @*    <div asp-validation-summary="ModelOnly"></div> *@
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" type="text" class="form-control-lg" />
            <span asp-validation-for="Name" class="text-primary"></span>
        </div>

        <div class="mb-3 row p-1">

            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" type="text" class="form-control-lg" />
            <span asp-validation-for="DisplayOrder" class="text-primary"></span>
        </div>






        <div class="row">
            <div class="col-lg-4 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-dark" style="width:150px">Back to Category</a>

            </div>
            <div class="col-lg-4 col-md-3">

                <button type="submit" class="btn btn-danger" style="width:150px">Edit</button>
            </div>

        </div>


    </div>

</form>

@*  adding client side validation prevent server to be loaded / hit ever time if there is client side valiidation error *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}